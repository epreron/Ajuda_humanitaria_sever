{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/*.js?(x)",
        "**/tests/**/*.spec.js?(x)"
      ],
      "env": {
        "mocha": true
      }
    }
  ]
}
